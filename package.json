{
  "name": "svgwiz",
  "productName": "SVGwiz",
  "version": "0.1.0",
  "description": "Cross-platform UI for SVGwiz - Organize, clean and transform your SVGs",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently -k \"npm:dev:*\"",
    "dev:vite": "vite renderer",
    "dev:electron": "cross-env NODE_ENV=development electron . --dev",
    "build": "vite build renderer && node scripts/fix-html-paths.js && node scripts/set-prod-csp.js && electron-builder",
    "build:vite": "vite build renderer && node scripts/fix-html-paths.js && node scripts/set-prod-csp.js",
    "lint": "standard",
    "pack": "vite build renderer && electron-builder --dir",
    "dist": "vite build renderer && node scripts/fix-html-paths.js && node scripts/set-prod-csp.js && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/svgwiz.git"
  },
  "keywords": [
    "svgwiz",
    "svg",
    "electron",
    "ui",
    "vector",
    "graphics",
    "converter"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0",
    "sharp": "^0.34.3",
    "simple-git": "^3.28.0",
    "svgsus": "^0.23.4",
    "tweetnacl": "^1.0.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.1",
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^25.3.0",
    "electron-builder": "^24.4.0",
    "postcss": "^8.4.21",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "standard": "^17.1.0",
    "tailwindcss": "^3.3.3",
    "vite": "^7.1.3",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.example.svgwiz",
    "productName": "SVGwiz",
    "files": [
      "**/*",
      "renderer/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "renderer/dist",
        "to": "renderer/dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "protocols": [
      {
        "name": "SVGwiz Protocol",
        "schemes": ["svgwiz"]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap"
      ],
      "category": "Development"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "directories": {
      "buildResources": "build"
    },
    "snap": {
      "confinement": "strict",
      "grade": "stable",
      "plugs": ["home", "network", "x11", "audio"]
    },
    "flatpak": {
      "runtimeVersion": "22.08"
    }
  },
  "bugs": {
    "url": "https://github.com/yourusername/svgwiz/issues"
  },
  "homepage": "https://github.com/yourusername/svgwiz#readme"
}
